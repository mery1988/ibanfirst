{% extends "./base.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-md-12 col-lg-12 mx-auto">
            <h3 class="login-heading mb-4">Liste des portefeuilles </h3>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tag</th>
                    <th scope="col">Devise</th>
                    <th scope="col">Dernier mouvement financier</th>
                    <th scope="col"></th>

                </tr>
                </thead>
                <tbody>
                {% for  wallet in wallets %}
                    <tr>
                        <td scope="row">{{ wallet.id }}</td>
                        <td>{{ wallet.tag }}</td>
                        <td>{{ wallet.currency }}</td>
                        <td>{{ wallet.dateLastFinancialMovement|date("m/d/Y") }}</td>
                        <td>
                            <a class="btn btn-outline-info" href="{{ path('detail_wallet', { 'id': wallet.id }) }}"
                               role="button">DÃ©tail</a>
                            <a class="btn btn-outline-primary"
                               href="{{ path('list_financial_movements', { 'walletId': wallet.id }) }}" role="button">
                                Liste Mvts Financiers</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 offset-md-6 col-lg-3 offset-lg-6">
            <a class="btn btn-outline-primary"
               href="{{ path('home_page') }}"
               role="button"> <i class="fa fa-chevron-left"></i> Page d'accueil </a>
        </div>
        <div class=" col-lg-3 col-md-3 ">
            <a class="btn btn-outline-dark" href="{{ path('list_all_financial_movements') }}"
               role="button">
                Liste Mvts financiers <i class="fa fa-chevron-right"></i></a>
        </div>
    </div>
{% endblock %}
